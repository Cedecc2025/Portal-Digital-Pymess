    <script>
        let posts = [];
        let currentImageData = null;

        // Cargar datos guardados
        function loadSavedData() {
            const savedPosts = localStorage.getItem('simplePosts');
            if (savedPosts) {
                posts = JSON.parse(savedPosts);
                renderPosts();
            }
        }

        // Manejar upload de imagen
        function handleImageUpload(event) {
            const file = event.target.files[0];
            if (file && file.type.startsWith('image/')) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    currentImageData = e.target.result;
                    document.getElementById('previewImage').src = currentImageData;
                    document.getElementById('previewImage').style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }

        // Drag and Drop
        function handleDragOver(event) {
            event.preventDefault();
            event.currentTarget.classList.add('dragover');
        }

        function handleDragLeave(event) {
            event.currentTarget.classList.remove('dragover');
        }

        function handleDrop(event) {
            event.preventDefault();
            event.currentTarget.classList.remove('dragover');
            
            const files = event.dataTransfer.files;
            if (files.length > 0 && files[0].type.startsWith('image/')) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    currentImageData = e.target.result;
                    document.getElementById('previewImage').src = currentImageData;
                    document.getElementById('previewImage').style.display = 'block';
                };
                reader.readAsDataURL(files[0]);
            }
        }

        // Agregar publicación
        function addPost() {
            const date = document.getElementById('postDate').value;
            const network = document.getElementById('network').value;
            const description = document.getElementById('description').value;
            
            if (!date || !description) {
                alert('Por favor completa la fecha y descripción');
                return;
            }
            
            if (!currentImageData) {
                alert('Por favor sube una imagen');
                return;
            }
            
            const post = {
                id: Date.now(),
                date: date,
                network: network,
                description: description,
                image: currentImageData
            };
            
            posts.push(post);
            posts.sort((a, b) => new Date(a.date) - new Date(b.date));
            
            localStorage.setItem('simplePosts', JSON.stringify(posts));
            renderPosts();
            clearForm();
            alert('✅ Publicación agregada exitosamente');
        }

        // Renderizar publicaciones
        function renderPosts() {
            const container = document.getElementById('postsList');
            
            if (posts.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: #9ca3af;">No hay publicaciones guardadas</p>';
                return;
            }
            
            container.innerHTML = posts.map(post => `
                <div class="post-item">
                    <img src="${post.image}" alt="Post image">
                    <div class="post-info">
                        <h4>${formatDate(post.date)}</h4>
                        <p>${getNetworkEmoji(post.network)} ${post.description.substring(0, 50)}...</p>
                    </div>
                    <div class="post-actions">
                        <button class="btn-delete" onclick="deletePost(${post.id})">Eliminar</button>
                    </div>
                </div>
            `).join('');
        }

        // Eliminar publicación
        function deletePost(id) {
            if (confirm('¿Seguro que quieres eliminar esta publicación?')) {
                posts = posts.filter(p => p.id !== id);
                localStorage.setItem('simplePosts', JSON.stringify(posts));
                renderPosts();
            }
        }

        // Limpiar formulario
        function clearForm() {
            document.getElementById('postDate').value = '';
            document.getElementById('description').value = '';
            document.getElementById('previewImage').style.display = 'none';
            currentImageData = null;
        }

        // Formatear fecha
        function formatDate(dateString) {
            const options = { day: 'numeric', month: 'long', year: 'numeric' };
            return new Date(dateString).toLocaleDateString('es-ES', options);
        }

        // Obtener emoji de red social
        function getNetworkEmoji(network) {
            const emojis = {
                instagram: '📷',
                facebook: '👤',
                linkedin: '💼',
                twitter: '🐦',
                tiktok: '🎵'
            };
            return emojis[network] || '📱';
        }

        // Toggle categorías de prompts
        function toggleCategory(header) {
            const content = header.nextElementSibling;
            const arrow = header.querySelector('span:last-child');
            
            if (content.classList.contains('active')) {
                content.classList.remove('active');
                arrow.textContent = '▼';
            } else {
                content.classList.add('active');
                arrow.textContent = '▲';
            }
        }

        // Copiar prompt
        function copyPrompt(element) {
            const text = element.textContent.replace(/^\d+/, '').replace('Copiar', '').trim();
            navigator.clipboard.writeText(text);
            
            const copyBtn = element.querySelector('.copy-btn');
            const originalText = copyBtn.textContent;
            copyBtn.textContent = '✅ Copiado';
            copyBtn.style.background = '#10b981';
            
            setTimeout(() => {
                copyBtn.textContent = originalText;
                copyBtn.style.background = '#10b981';
            }, 2000);
        }

        // Buscar prompts
        function searchPrompts(event) {
            const searchTerm = event.target.value.toLowerCase();
            const promptItems = document.querySelectorAll('.prompt-item');
            
            promptItems.forEach(item => {
                const text = item.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
            
            // Expandir categorías con resultados
            document.querySelectorAll('.prompt-category').forEach(category => {
                const visibleItems = category.querySelectorAll('.prompt-item:not([style*="display: none"])');
                if (visibleItems.length > 0 && searchTerm) {
                    category.querySelector('.category-content').classList.add('active');
                    category.querySelector('.category-header span:last-child').textContent = '▲';
                }
            });
        }

        // Inicializar
        window.onload = function() {
            loadSavedData();
            
            // Establecer fecha actual por defecto
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('postDate').value = today;
        };
    </script>
</body>
</html>
